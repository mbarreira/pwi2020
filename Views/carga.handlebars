<form method="POST">
    <p><br></p>
    {{#if error}}
    <div class="alert alert-warning" role="alert">
        {{error}}
    </div>
    {{/if}}
    <p><br></p>
    <h1>Alta de Registro</h1>
    <div class="form-group">
        <label>Detalle de la tarea</label>
        <input type="text" class="form-control" name="detalle" value={{datos.detalle}}>
    </div>
    <div class="form-group">
        <label>Estados de Animo</label>
        <select class="form-control" name="animo" value={{datos.animo}}>
            <option>Bueno</option>
            <option>Regular</option>
            <option>Malo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cargar Registro</button>
</form>
